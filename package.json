{
  "name": "usenet-newsreader",
  "version": "1.0.0",
  "description": "A minimal text-only Usenet newsreader for the browser",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:v2": "node server-v2.js",
    "start:pooled": "node server-pooled.js",
    "dev": "node server.js",
    "dev:v2": "node server-v2.js",
    "dev:pooled": "node server-pooled.js",
    "build:css": "tailwindcss -i ./public/styles.css -o ./public/output.css --watch",
    "build:css:prod": "tailwindcss -i ./public/styles.css -o ./public/output.css --minify"
  },
  "keywords": [
    "usenet",
    "newsreader",
    "nntp"
  ],
  "author": "rpretzer",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "compression": "^1.8.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  }
}
